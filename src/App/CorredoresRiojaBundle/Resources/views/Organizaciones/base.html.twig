<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" lang="es-ES">
        <title>{% block title %}{% endblock %}</title>    ​
	{% block stylesheets %}{% endblock %} 
        
         {% stylesheets '@AppCorredoresRiojaBundle/Resources/public/css/carrerasrioja.css'
                '@AppCorredoresRiojaBundle/Resources/public/css/formulario.css'
                filter='yui_css' %}
    <link href="{{ asset_url }}" rel="stylesheet" media="all" type="text/css">
    {% endstylesheets %}
    </head>
    <body>
        <div class="logo">Carreras por La Rioja</div>

        <div class="sombra">
            <div class="nucleo">
                <div id="lang">
                    {% set locale = app.request.locale %}
                    
                    {% if locale == 'es' %}
                        <span>Español</span>
                        <a href="{{ path('app_organizaciones_rioja_homepage', { '_locale': 'en' }) }}">English</a>
                    {% elseif locale == 'en' %}
                        <a href="{{  path('app_organizaciones_rioja_homepage', { '_locale': 'es' }) }}">Español</a>
                        <span>English</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="barra_menus">	
            <div class="pestanias">
                <div class="grupoPestanias">
                    <div class="pestaniaNoSel"><a href="{{ path('app_corredores_rioja_homepage') }}">Zona Corredores</a></div>
                    <div class="pestaniaSel"><a href="{{ path('app_organizaciones_rioja_homepage') }}">Zona Organizadores</a></div>
                    <div class="pestaniaNoSel"><a href="/admin/">Intranet</a></div>
                </div>
            </div>
        </div>    
        
        {% block submenu %}{% endblock %}
        
        <div class="sombra">
            <div class="nucleo">    
                <div class="clear"></div>  
                <div class="separa"></div>
                <div class="pie">
                    <span class="pie_izda">
                        <a href="mailto:david.rueda@unirioja.es">Contacto</a> </span>
                    <span class="pie_dcha">
                        &copy; 2015 David Rueda Lejárraga </span>
                    <div class="clear"></div>  
                </div>
            </div>
        </div>
    </body>
</html>
